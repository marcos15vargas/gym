---
import Navbar from '../components//Navbar.astro';
import Footer from '../components/Footer.astro';
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>GYM COSTANERA</title>
		<script src="https://kit.fontawesome.com/be5e200109.js" crossorigin="anonymous"></script>
	</head>
	<body class="relative">
		<Navbar/>
			<slot />
		<Footer/>
	</body>
</html>

<style>
	@font-face{
		font-family: 'gym';
		src: url('../../public/font/GothamBook.ttf');
	}
	@font-face{
		font-family: 'gym-bold';
		src: url('../../public/font/GothamMedium.ttf');
	}
	html,
	body {
		font-family: 'gym';
		margin: 0;
		width: 100%;
		height: 100%;
		background-color: #171820;
		color: white;
		background-image: url('../assets/fondo/fondo-asfalto-oscuro.jpg');
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
		background-attachment: fixed;
		scroll-behavior: smooth;
		scroll-padding-top: 75px;
	}
</style>
